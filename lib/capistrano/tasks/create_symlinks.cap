namespace :deploy do
  task :create_symlinks do
    on roles :app do
      info "Make symlink for database yaml"
      execute :ln, "-nfs #{shared_path}/config/database.yml #{release_path}/config/database.yml"

      info "Make symlink for images folder"
      execute :ln, "-fs #{shared_path}/images #{release_path}/app/assets/images"
      execute :ln, "-fs #{shared_path}/images #{release_path}/public/assets/images"
    end
  end
  
  before :compile_assets, :create_symlinks
end
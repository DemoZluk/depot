= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  %table
    %tr.field
      %td= f.label :title
      %td= f.text_field :title
    %tr.field
      %td= f.label :body
      %td= f.text_area :body
    %tr.field
      %td= f.label :author
      %td= f.text_field :author, value: current_user.login || current_user.email
    %tr.actions
      %td= f.submit 'Сохранить'

.select
  %select{name: name}
    - array.each do |item|
      %option{:selected => item.to_s == current.to_s ? true : false}= item.to_s
  %span= selection_label(current) # Application helper
  .arrow_down
  %ul.values
    - array.each do |item|
      - unless item.to_s == current.to_s
        %li= link_to(selection_label(item), request.parameters.merge({controller: controller, action: action, param => item}))
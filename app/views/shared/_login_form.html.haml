= form_for(resource, as: resource_name, url: login_path, html: {id: 'new_user_form', class: 'new_user_form'}) do |f|
  = f.label :email
  = f.email_field :email, autofocus: true

  = f.label :password
  = f.password_field :password

  - if devise_mapping.rememberable?
    = f.check_box :remember_me
    = f.label :remember_me
  = f.submit "Войти"
  %div
    = link_to "Забыли пароль?", new_password_path(resource_name)
    = link_to "Регистрация", new_registration_path(resource_name)
=# render "devise/shared/links"

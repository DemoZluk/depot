- if @cart.line_items.empty?
  %strong Ваша корзина пуста
- else
  - if controller_name != 'carts'
    %h4= link_to('Перейти в корзину', cart_path, id: 'cart_link')
  - lis = @cart.line_items.page(params[:li_page])
  %table.item_table
    %colgroup 
      %col
      %col
      %col{width: '55%'}
      %col{width: '30%'}
      %col
    = render(partial: 'line_items/line_item', collection: lis, controller: 'line_item')
    %tfoot
      %td
      %td
      %td.left Итого
      %td.grand_total.right= render('shared/grand_total')
      %td
      %td.clear_cart= button_to('×', cart_path, method: :delete, class: 'btn btn-default btn-xs bold', data: { confirm: 'Вы уверены, что хотите убрать все товары из корзины?' }, remote: true)
  = paginate(lis, param_name: 'li_page', remote: true, params: {controller: 'line_items', action: 'index'})
= content_tag :div, '×', id: 'close_cart', class: 'close' unless controller_name == 'carts'

= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "Следующие ошибки не позволили разместить заказ:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr.field
      %td= f.label :name
      %td= f.text_field :name, size: 40, placeholder: 'Иванов Иван Иванович', required: true
    %tr.field
      %td= f.label :address
      %td= f.text_area :address, placeholder: 'г. Санкт-Петербург, ул. Ленина, д. 1, корпус 1, кв. 15', rows: 3, cols: 32, required: true
    %tr.field
      %td= f.label :email
      %td= f.email_field :email, size: 40, placeholder: "example@domain.com", required: true
    %tr.field
      %td= f.label :pay_type
      %td= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Выберите способ оплаты'
    %tr.field
      - if Time.now>Time.parse('15:00')
        - days = 1.day.from_now
      %td= f.label :shipping_date
      %td= f.text_field :shipping_date, id: 'date', placeholder: 'гггг-мм-дд'#, use_two_digit_numbers: true, start_year: Time.now.year, end_year: Time.now.year+1, default: DateTime.tomorrow
  .actions
    = f.submit 'Заказать', :class => 'order primary_button'

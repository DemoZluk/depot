.container-fluid
  %h1.underlined Список заказов

  = form_tag({action: :destroy}, {method: :delete, class: 'row'}) do
    .col-sm-12.col-lg-10
      %table.table
        %thead
          %tr
            %th ID
            %th Дата
            %th Товары
            %th.right Сумма
            %th.center Статус
            - if can? :manage, Order
              %th 
        %tbody
          - @orders.each do |order|
            %tr
              = render order
              %td.center= link_to "×", cancel_order_path(order), data: { :confirm => 'Вы уверены что хотите отменить заказ?' }, class: 'bold btn btn-link btn-lg'

    .col-lg-2
      = submit_tag 'Удалить'
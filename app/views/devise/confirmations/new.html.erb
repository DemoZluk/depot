<h2>Отправить инструкции по подтверждению пароля</h2>
<div>
  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, {:autofocus => true, id: 'email', placeholder: 'Почта'} %></div>

    <div><%= f.submit "Отправить заново" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


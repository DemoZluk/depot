<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Вход</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Регистрация', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control', tabindex: 1 %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Забыли пароль?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', tabindex: 2 %>
    </div>
      <%= f.submit 'Войти', :class => 'button right', tabindex: 3 %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Не получили письмо с подтверждением?", new_confirmation_path(resource_name), class: 'right' %>
      <% end -%>
  <% end %>
</div>
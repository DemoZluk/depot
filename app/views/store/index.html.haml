.container-fluid
  .row
    .col-lg-2.col-md-3.col-sm-3#side
      = render 'shared/menu_side'
      - if @products
        #filters
          = render 'shared/filter'
    .col-lg-10.col-md-9.col-sm-9#main
      %h1= 'Каталог'

      .control= render 'shared/control'
      #product_index
        = render(@products) || 'Раздел ещё пуст либо не найдено позиций, удовлетворяющих критериям поиска.'

      #loading
        #notification
          = image_tag 'loading.gif', alt: 'loading', id: 'loading_gif'
          %p Идёт загрузка, пожалуйста подождите

